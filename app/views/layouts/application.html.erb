<!DOCTYPE html>
<html>
  <head>
    <title>MethodGtd</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <meta name='viewport' content="width=device-width, initial-scale=1.0; maximum-scale=1.0; user-scalable=0">
  </head>
  <body>

    <div class='navbar navbar-fixed-top'>
      <div class='navbar-inner'>
        <div class='container'>
          <% if current_user %>
            <ul class='nav'>
              <li id='add-todo-button-navitem'>
              <button id='add-todo-button' class='btn'>
                <span class='icon-plus'></span>
                Todo
              </button>
              </li>
            </ul>

            <%= form_for Todo.new, {:controller => 'todo', :action => 'create', :html => {:class=> 'navbar-search horizontal-mobile'} } do |f| %>
              <div style="margin-bottom:0">
                <%= f.text_field :description, :div => false, :class => 'horizontal-mobile' %>
              </div>
            <% end %>
          <% else %>
            <span class='brand'>Welcome!</span>
          <% end %>
        </div>
      </div>
    </div>

    <div id='main-content'>
    <div class='container'>
      <% unless flash.empty? %>
        <div class='row'>
          <div class='span4 offset4'>
            <% if notice %>
              <p class="alert alert-info"><%= notice %></p>
            <% end %>
            <% if alert %>
              <p class="alert alert-error"><%= alert %></p>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class='row'>
          <%= yield %>
      </div>

    </div> <!-- .container -->
  </div>

    <div class='navbar navbar-fixed-bottom'>
      <div class='navbar-inner'>
        <div class='container'>
          <a class='brand' href='/'>Method GTD</a>

          <div id='spinner'>

          <ul class='nav pull-right'>
            <% if user_signed_in? %>
              <li><a href='/account'>Account</a></li>
              <li><%= link_to('Logout', destroy_user_session_path, {:method => :delete}) %></li>
            <% else %>
              <li><%= link_to('Login', new_user_session_path, {:id => 'login-link'})  %></li>
              <li><%= link_to('Signup', new_user_registration_path, {:id => 'signup-link'})  %></li>
            <% end %>
          </ul>

        </div>
      </div>
    </div>
  </body>
</html>
